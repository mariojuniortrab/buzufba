<% include header.ejs %>
<% include navbar.ejs %>
<% include sidebar.ejs %>
<h3></h3>

<form action="/salvar_horario" method="post">
<div class="row">
    <div class="col m3 "></div>
    <div class="col s12 m6 ">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Horário</span>
                <input type="hidden" name="id" value= "<%= horario[0].id || null%>" <%= horario[0].id ? '' : 'disabled' %>>
                
                <p>
                <div class="input-field">
                    <select id= "id_roteiro" name= "id_roteiro" >
                         <% for(var i=0; i< roteiros.length; i++){ %>
                            <option value= "<%= roteiros[i].id %>" <%= horario[0].id_roteiro == roteiros[i].id ? 'selected': null%> > <%=  roteiros[i].nome%></option>
                         <% } %>
                    </select>
                    <label>Roteiro</label>
                </div>
                </p>

                <p>
                <label for="last_name">Hora de saída</label>
                <input name='hora'  id="hora" type="time" class="validate" value= "<%= horario[0].hora || null%>">
                </p>

               
               
            
                <label>São Lázaro</label></br>
                <p>
                  <input name="entra_sao_laz" type="radio" id="test1" value="s" <%= horario[0].entra_sao_laz == 's' ? 'checked': null%>/>
                  <label for="test1">Sim</label>
                </p>
                <p>
                  <input name="entra_sao_laz" type="radio" id="test1" value="n" <%= horario[0].entra_sao_laz == 'n' ? 'checked': null%>/>
                  <label for="test1">Não</label>
                </p>
            </div>
            <div class="card-action">
                <div >
                    <button class="btn waves-effect waves-light blue darken-1 ">Salvar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="col m3 "></div>
</div>
</form>        


