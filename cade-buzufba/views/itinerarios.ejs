<% include header.ejs %>
<% include navbar.ejs %>
<% include sidebar.ejs %>
<h3></h3>

 <div class="row">
    <div class="col m3 "></div>
    <div class="col s12 m6 ">
        <div class="card">
        
        <div class="card-content">
        <span class="card-title">Itinerários</span>
        <a href="/novo_itinerario" class="waves-effect waves-light btn blue darken-1 right">Cadastrar itinerário</a>
        <table class="striped">
                <thead>
                    <tr>
                        <th>Ordem</th>
                        <th>Roteiro</th>
                        <th>Ponto</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i< itinerarios.length; i++){ %>
                        <tr>
                            <td><%= itinerarios[i].ordem%></td>
                            <td><%= itinerarios[i].nome_roteiro%></td>
                            <td><%= itinerarios[i].nome_ponto%></td>
                            <td><a href="/editar_itinerario/<%= itinerarios[i].id%>">Editar</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        </div>
    </div>

    <div class="col m3 "></div>
</div>


